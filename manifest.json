{
  "manifest_version": 2,
  "name": "多看助手",
  "version": "1.0.1",

  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me",

  "description": "本扩展致力于提升多看阅读Web端的用户体验, 例如显示书籍的历史最低价格和显示书籍的豆瓣评分.",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "content_scripts": [{
    "matches": ["http://www.duokan.com/*"],
    "js": ["duokan-helper.js"],
    "run_ad": "document_end"
  }],

  "background": {
    "script": ["background.js"]
  },

  "permissions": [
    "http://www.duokan.com/",
    "https://api.douban.com/",
    "webNavigation"
  ]
}
